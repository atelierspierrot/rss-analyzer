{
    "name": "atelierspierrot/web-syndication-analyzer",
    "type": "library",
    "title": "PHP syndication feeds anaylzer",
    "description": "A package to manipulate syndication feeds.",
    "keywords": ["rss"],
    "homepage": "http://github.com/atelierspierrot/web-syndication-analyzer",
    "license": "Apache-2.0",
    "authors": [{
            "name": "Les Ateliers Pierrot & contributors",
            "email": "contact@ateliers-pierrot.fr",
            "homepage": "http://www.ateliers-pierrot.fr/"
    }],
    "require": {
        "php": ">=5.3.0",
        "atelierspierrot/patterns": "1.*",
        "atelierspierrot/library": "1.*"
    },
    "require-dev": {
        "sami/sami": "dev-master",
        "fabpot/php-cs-fixer": "@stable",
        "phpmd/phpmd" : "1.4.*"
    },
    "autoload": { "psr-4": { "WebSyndication\\": "src/WebSyndication/" } },
    "scripts": {
        "build-doc": "php vendor/bin/sami.php update .sami.php",
        "update-doc": "php vendor/bin/sami.php update .sami.php",
        "cs-fixer": "php vendor/bin/php-cs-fixer fix -v"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
